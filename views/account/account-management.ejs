<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<div class="account-management">
  <h2>Welcome, <%= locals.accountData.account_firstname %></h2>
  <p>You're logged in.</p>

  <ul class="account-details">
    <li><strong>First name:</strong> <%= locals.accountData.account_firstname %></li>
    <li><strong>Last name:</strong> <%= locals.accountData.account_lastname %></li>
    <li><strong>Email:</strong> <%= locals.accountData.account_email %></li>
    <li><strong>Account Type:</strong> <%= locals.accountData.account_type %></li>
  </ul>

  <div class="account-update-section">
    <h3>Account Management</h3>
    <p>Use the link below to update your account information:</p>
    <p>
      <a href="/account/update/<%= locals.accountData.account_id %>" title="Update Account Information">
        Update Account Information
      </a>
    </p>
  </div>

  <% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
    <hr>
    <div class="management-section">
      <h3>Inventory Management</h3>
      <p>Click the link below to manage inventory classifications and vehicles:</p>
      <p><a href="/inv/" title="Manage Inventory">Go to Inventory Management</a></p>
    </div>
  <% } %>
</div>